<% provide(:title, @status.to_s )%>
<% provide(:description, "There is an error on this page." )%>
<div class="error-template">
  <% if @status.to_s == "404" %>

  <h1> Oops!</h1>
  <h2> 404 Not Found</h2>
  <div class="error-details">
    Sorry, an error has occured, Requested page not found!
  </div>
  <div class="error-actions">
    <a href="<%= root_path %>" class="btn btn-primary btn-lg"><span class="fa fa-home"></span> Take Me Home </a>
    <a href="mailto:gscoders@gmail.com" class="btn btn-default btn-lg"><span class="fa fa-envelope"></span> Contact Support </a>
  </div>
</div>

<% else %>

<div class="error">

  <!--Alert -->
  <%= image_tag 'exception_handler/alert.png', width: "150", alt: "Error!", title: "Sorry, A Server Error Occurred", class: "alert" %>

  <!--Message -->
  <div class="message">
    <strong><%= details[:name] %></strong>
    <span><%= details[:message] %></span>
  </div>

</div>

<% end %>
</div>
